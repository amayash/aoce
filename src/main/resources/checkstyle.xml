<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Линии -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="severity" value="warning"/>
    </module>

    <!-- Длина файла -->
    <module name="FileLength">
        <property name="max" value="1000"/>
    </module>

    <!-- Проверки стиля кода -->
    <module name="TreeWalker">
        <!-- Запрещено использовать звездочку в импортах -->
        <module name="AvoidStarImport">
            <property name="severity" value="warning"/>
        </module>

        <!-- Отступы: базовый отступ и табуляция -->
        <module name="Indentation">
            <property name="basicOffset" value="4" />
            <property name="tabWidth" value="4" />
        </module>

        <!-- Пустые блоки: необработанные блоки должны быть помечены текстом -->
        <module name="EmptyBlock">
            <property name="option" value="text" />
        </module>

        <!-- Порядок модификаторов (например, public static final) -->
        <module name="ModifierOrder" />

        <!-- Проверка на наличие лишних пробелов вокруг операторов -->
        <module name="WhitespaceAround" />

        <!-- Проверка на правильный формат имен методов -->
        <module name="MethodParamPad" />

        <!-- Имена локальных переменных должны начинаться с маленькой буквы -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$" />
        </module>

        <!-- Проверка на правильный порядок методов (например, сначала конструкторы, потом обычные методы) -->
        <module name="ModifierOrder" />

        <!-- Проверка на правильность использования скобок в управляющих структурах -->
        <module name="RightCurly" />

        <!-- Проверка стиля кода в классе -->
        <module name="ClassTypeParameterName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Запрещены неиспользуемые импортированные классы -->
        <module name="UnusedImports"/>

        <!-- Применение декларации переменных -->
        <module name="DeclarationOrder"/>
    </module>
</module>
